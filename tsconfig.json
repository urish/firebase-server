{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "removeComments": false,
    "sourceMap": true,
    "declaration": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true,
    "rootDir": ".",
    "outDir": "dist",
    "lib": ["es5", "es2015.core", "es2015.promise", "es2015.collection", "es2015.iterable"]
  },
  "include": [
    "index.ts",
    "dom-types.d.ts",
    "lib/**/*.ts"
  ]
}
